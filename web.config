<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Configuración para Node.js en Azure -->
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <!-- Rewrite rules para SPA + API -->
    <rewrite>
      <rules>
        <!-- REGLA 1: Permitir archivos estáticos - NO REESCRIBIR -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="^(.+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- REGLA 2: Permitir directorios estáticos - NO REESCRIBIR -->
        <rule name="StaticDirectories" stopProcessing="true">
          <match url="^(.+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- REGLA 3: Rutas API -> Node.js -->
        <rule name="APIRoute" stopProcessing="true">
          <match url="^api(/?.*)" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
        
        <!-- REGLA 4: Health check -->
        <rule name="HealthCheck" stopProcessing="true">
          <match url="^health$" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
        
        <!-- REGLA 5: SPA - todas las demás rutas van al backend -->
        <rule name="SPA" stopProcessing="true">
          <match url="^" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Seguridad -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configuración de iisnode -->
    <iisnode 
      nodeProcessCommandLine="node"
      watchedFiles="*.js;web.config"
      loggingEnabled="true"
      devErrorsEnabled="false"
      debuggingEnabled="false"
      node_env="production"
    />
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>

